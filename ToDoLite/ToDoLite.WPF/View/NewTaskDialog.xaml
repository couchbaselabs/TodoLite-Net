<Window x:Class="ToDoLite.WPF.View.NewTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoLite.WPF.View"
        mc:Ignorable="d"
        Title="New ToDo List" Height="125" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="15,0">
        <TextBlock Text="Title for new list." HorizontalAlignment="Center" />
        <TextBox Margin="0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,5,0" />
            <Button Content="Cancel" Width="75" />
        </StackPanel>
    </StackPanel>
</Window>
