<views:MvxWpfView x:Class="ToDoLite.WPF.Views.MasterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoLite.WPF.Views"
        xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
        mc:Ignorable="d" MinHeight="300" MinWidth="300">

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Content="Login" Width="75" Command="{Binding LoginButtonCommand}" />
                <Button Content="+" Width="75" Grid.Column="2" Command="{Binding AddButtonCommand}" />
            </Grid>
            <ListView ItemsSource="{Binding SavedLists}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="15">
                            <TextBlock Text="{Binding Title}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
</views:MvxWpfView>
